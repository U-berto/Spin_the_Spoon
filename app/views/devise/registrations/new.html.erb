<div class="auth-form-container">
  <h2 class="auth-title">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username,
                  required: true,
                  input_html: { class: "auth-input", placeholder: "Username" } %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email", class: "auth-input", placeholder: "Email" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "auth-input", placeholder: "Password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "auth-input", placeholder: "Confirm Password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Register", class: "auth-btn" %>
    </div>
  <% end %>
</div>

