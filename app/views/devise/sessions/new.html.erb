<div class="auth-form-container">
  <h2 class="auth-title">Log in</h2>

 <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "auth-input" } %>

      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "auth-input" } %>
  </div>

 <div class="form-actions">
      <%= f.button :submit, "Log in", class: "auth-btn" %>
    </div>
  <% end %>

<div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>





